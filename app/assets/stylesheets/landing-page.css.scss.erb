body,
html {
    width: 100%;
    height: 100%;
}
h1,
h2,
h3,
h4,
h5,
h6 {
}


.topbox{
    background-color: #647F99;
    padding: 70px 0;
    color:#fff;
    .toplogo{
        background: url(<%= asset_path('logo-small-white.png') %>) no-repeat center;
        height: 29px;
        width: 176px;
        display: block;
        margin: 0 auto 60px;
        text-indent: -9999px;
    }
    .todos{
        em{
            width: 40px;
            height: 40px;
            border: 3px solid #ccc;
            border: 3px solid rgba(255,255,255,0.5);
            display: inline-block;
            border-radius: 6px;
            margin-right: 30px;
            vertical-align: middle;
        }
        span{
            display: inline-block;
            vertical-align: middle;
            text-align: left;
            font-size: 17px;
            i{
                display: block;
            }
        }
        li{
            margin-bottom: 25px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 400;
            &.main{
                margin-bottom: 35px;
                em{
                    width: 75px;
                    height: 75px;
                }
                span{
                    i{
                        font-size: 65px;
                        font-style: normal;
                        font-weight: bold;
                    }
                }
            }
        }
    }
}


.mailing{
    background-color: #d6e9ee;
    padding: 60px 0;
    h3{
        margin-top:0;
        margin-bottom: 30px;
        font-family: 'Montserrat', sans-serif;
        font-weight: 400;
    }
    p{
        font-family: 'Montserrat', sans-serif;
        font-size: 18px;
        line-height: 28px;
        color: #666;
        color: rgba(0,0,0,0.65);
    }

}

.mailingform{
    .form-control{
        border-radius: 5px;
        background: transparent;
        border-color: #6F89A5;
        padding: 13px 15px;
        height: auto;
        display: inline-block;
        width: 250px;
        vertical-align: top;
        font-size: 17px;
    }
    .btn{
        display: inline-block;
        padding: 14px 20px 14px;
        background: #E56473;
        border: 0;
        font-size: 17px;
        vertical-align: top;
        &:hover{
            background:#D24F5F;
        }
    }
}
#mc_embed_signup{
    margin: 0 auto;
    font:20px Helvetica,Arial,sans-serif;

}


.how-it-works{
    padding: 60px 0;
    h3{
        margin: 0 auto 20px;
        font-family: 'Montserrat', sans-serif;
        font-weight: 400;
    }
    .icon{
        width: 250px;
        height: 200px;
        background: #eee;
        display: block;
        margin: 20px auto 20px;
        border-radius: 5px;
    }
    p{
        font-family: 'Montserrat', sans-serif;
        font-size: 18px;
    }
    span{
        font-size: 16px;
        padding: 0 40px;
        display: block;
        color: #666;
    }
}




.intro-header {
    padding-top: 50px; /* If you're making other pages, make sure there is 50px of padding to make sure the navbar doesn't overlap content! */
    padding-bottom: 50px;
    text-align: center;
    color: #f8f8f8;
    background: asset-url('background_large.png') no-repeat center center;
    background-size: cover;
    font-family: 'Montserrat', sans-serif;
}

.intro-message {
    position: relative;
    padding-top: 10%;
    padding-bottom: 20%;
    font-family: 'Montserrat', sans-serif;
}

.pagecontent {
    margin: 0;
    text-align: center;
    padding: 40px;
    background-color: #D6E9EE;
    font-size: 1em;
    font-family: 'Montserrat', sans-serif;
    font-size: 18px;
}

.intro-message > h1 {
    margin: 0;
    text-shadow: 2px 2px 3px rgba(0,0,0,0.6);
    font-size: 5em;
    font-family: 'Montserrat', sans-serif;
}

.intro-divider {
    width: 400px;
    border-top: 1px solid #ffffff;
    border-bottom: 1px solid rgba(0,0,0,0.2);
    font-family: 'Montserrat', sans-serif;
}

.intro-message > h3 {
    text-shadow: 2px 2px 3px rgba(0,0,0,0.6);
    font-family: 'Montserrat', sans-serif;
}

@media(max-width:767px) {
    .intro-message {
        padding-bottom: 15%;
        font-family: 'Montserrat', sans-serif;
    }

    .intro-message > h1 {
        font-size: 3em;
        font-family: 'Montserrat', sans-serif;
    }

    ul.intro-social-buttons > li {
        display: block;
        margin-bottom: 20px;
        padding: 0;
        font-family: 'Montserrat', sans-serif;
    }

    ul.intro-social-buttons > li:last-child {
        margin-bottom: 0;
    }

    .intro-divider {
        width: 100%;
        font-family: 'Montserrat', sans-serif;
    }
}

.network-name {
    text-transform: uppercase;
    font-size: 14px;
    font-weight: 400;
    letter-spacing: 2px;
    font-family: 'Montserrat', sans-serif;
}

.content-section-a {
    margin: 0;
    padding: 20px 0;
    background-color: #D6E9EE;
    font-family: 'Montserrat', sans-serif;
}

.content-section-b {
    padding: 50px 0;
    position: relative;
    font-family: 'Montserrat', sans-serif;
    text-align:center;
}

.section-heading {
    margin-bottom: 30px;
    font-family: 'Montserrat', sans-serif;
    font-color: #E7E7E7;
    font-weight: 300;
}

.section-heading-spacer {
    text-align: center;
    margin: 0;
    width: 1200px;
    font-family: 'Montserrat', sans-serif;
    font-weight: 400;
    padding-top: 5%;
    padding-bottom: 1%;
    font-color: #E7E7E7;

}

.banner {
    padding: 100px 0;
    color: #f8f8f8;
    background: url(../assets/banner-bg.jpg) no-repeat center center;
    background-size: cover;
}

.banner h2 {
    margin: 0;
    text-shadow: 2px 2px 3px rgba(0,0,0,0.6);
    font-size: 3em;
    font-family: 'Montserrat', sans-serif;
}

.banner ul {
    margin-bottom: 0;
}

.banner-social-buttons {
    float: right;
    margin-top: 0;
}

@media(max-width:1199px) {
    ul.banner-social-buttons {
        float: left;
        margin-top: 15px;
    }
}

@media(max-width:767px) {
    .banner h2 {
        margin: 0;
        text-shadow: 2px 2px 3px rgba(0,0,0,0.6);
        font-size: 3em;
    }

    ul.banner-social-buttons > li {
        display: block;
        margin-bottom: 20px;
        padding: 0;
    }

    ul.banner-social-buttons > li:last-child {
        margin-bottom: 0;
    }
}

