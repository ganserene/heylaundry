.topbox{
    background-color: #647F99;
    padding: 70px 0;
    color:#fff;
    @media (max-width: 400px){
        padding-top: 40px;
        padding-bottom: 30px;
    }
    .toplogo{
        background: url(<%= asset_path('heylaundry-logo-white.png') %>) no-repeat center;
        height: 38px;
        width: 180px;
        background-size: 180px 38px;
        display: block;
        margin: 0 auto 60px;
        text-indent: -9999px;
        @media (max-width: 400px){
            margin-bottom: 30px;
        }
    }
    .todos{
        em{
            width: 40px;
            height: 40px;
            border: 3px solid #ccc;
            border: 3px solid rgba(255,255,255,0.5);
            display: inline-block;
            border-radius: 6px;
            margin-right: 30px;
            vertical-align: middle;
            @media (max-width: 400px){
                display: none;
            }
        }
        span{
            display: inline-block;
            vertical-align: middle;
            text-align: left;
            font-size: 17px;
            @media (max-width: 400px){
                text-align: center;
            }
            i{
                display: block;
            }
            &.bar{
                background: #fff;
                background: rgba(255,255,255,0.3);
                width: 100px;
                height: 16px;
                margin-right: 10px;
                border-radius: 3px;
                display: inline-block;
                &.bar2{
                    width: 70px;
                }
                &.bar3{
                    width: 50px;
                }
            }
        }
        li{
            margin-bottom: 25px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 400;
            @media (max-width: 400px){
                display: none;
            }
            &.main{
                @media (max-width: 400px){
                    display: block;
                }
                margin-bottom: 35px;
                em{
                    width: 75px;
                    height: 75px;
                    @media (max-width: 480px){
                        width: 50px;
                        height: 50px;
                    }

                }
                span{
                    background-color: transparent;
                    @media (max-width: 400px){
                        padding: 0 0px;
                        font-size: 21px;
                        br{
                            display: none;
                        }
                    }
                    i{
                        font-size: 65px;
                        font-style: normal;
                        font-weight: bold;
                        @media (max-width: 480px){
                            font-size: 55px;
                        }
                        @media (max-width: 400px){
                            display: none;
                        }
                    }
                }
            }
        }
    }
}


.mailing{
    background-color: #d6e9ee;
    padding: 60px 0 70px;
    @media (max-width: 400px){
        padding: 40px 0 50px;
    }
    h3{
        margin-top:0;
        margin-bottom: 20px;
        font-family: 'Montserrat', sans-serif;
        font-weight: 400;
        line-height: 31px;
    }
    p{
        font-family: 'Montserrat', sans-serif;
        font-size: 18px;
        line-height: 28px;
        color: #666;
        color: rgba(0,0,0,0.65);
        @media (max-width: 400px){
            font-size: 16px;
            line-height: 25px;
            br{
                display: none;
            }
        }
    }

}

.mailingform{
    .form-control{
        border-radius: 5px;
        background: transparent;
        border-color: #6F89A5;
        padding: 13px 15px;
        height: auto;
        display: inline-block;
        width: 300px;
        vertical-align: top;
        font-size: 17px;
        margin-right: 5px;
        @media (max-width: 520px){
            width: 95%;
            display: block;
            margin: 0px auto 10px;
        }
    }
    .btn{
        display: inline-block;
        padding: 14px 20px 14px;
        background: #E56473;
        border: 0;
        font-size: 17px;
        vertical-align: top;
        @media (max-width: 520px){
            width: 95%;
            display: block;
            margin: 0 auto;
        }
        &:hover{
            background:#D24F5F;
        }
    }
}
#mc_embed_signup{
    margin: 0 auto;
    font:20px Helvetica,Arial,sans-serif;

}


.how-it-works{
    padding: 80px 0 90px;
    h3{
        margin: 0 auto 20px;
        font-family: 'Montserrat', sans-serif;
        font-weight: 400;
    }
    .icon{
        width: 160px;
        height: 160px;
        background: url(<%= asset_path('icon-sprite.png') %>) no-repeat;
        background-size: 475px 150px;
        display: block;
        margin: 20px auto 25px;
        border-radius: 5px;
        &.basket{
            background-position: 7px 0;
        }
        &.spinning{
            background-position: -157px 4px;
        }
        &.home{
            background-position: -320px 4px;
        }
    }
    p{
        font-family: 'Montserrat', sans-serif;
        font-size: 18px;
    }
    span{
        font-size: 16px;
        padding: 0 30px;
        display: block;
        color: #666;
        @media (max-width: 991px){
            padding: 0px;
        }
    }
}

.footer {
    padding: 50px 0;
    font-family: 'Montserrat', sans-serif;
    font-size: 15px;
    color: #777777;
}


#social{
    position: fixed;
    background:red;
    left: 0;
    top: 45%;
    box-shadow: 0 1px 2px rgba(0,0,0,.1);
    a{
        padding: 13px 12px;
        display: block;
        &.fb{
            background:#3b5998;
        }
        &.tw{
            background:#00b0ed;
        }
    }
    i{
        font-size: 30px;
        color:#fff;
    }
}
